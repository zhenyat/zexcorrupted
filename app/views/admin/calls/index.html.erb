<h1><%= t Call.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th>Dotcom</th>
      <th><%= Call.human_attribute_name(:api) %></th>
      <th><%= Call.human_attribute_name(:name) %></th>
      <th><%= Call.human_attribute_name(:title) %></th>
      <!--th><%= Call.human_attribute_name(:link) %></th-->
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.api.dotcom.name %></td>
        <td><%= call.api.mode %></td>
        <td><%= call.name %></td>
        <td><%= call.title %></td>
        <!--td><%= call.link %></td-->
        <td><%= status_mark call.status %></td>
        <td><%= render 'admin/shared/index_buttons_ddl', resource: call %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_call_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
