<div class="container">
  <div class="row">
    <div class="col-ms-6">
      <%=  simple_form_for([:admin, @coin], html: {multipart: true}) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :code %>
          <%= f.input :kind, include_blank: false %>
          <%= f.input :unicode %>
          <%= f.input :status, default: 0 %>

          <%= render 'admin/shared/form_avatar', f: f, object: @coin %>
          <%= render 'admin/shared/form_actions', f: f, object: @coin %>
        </div>
      <% end %>
    </div>
  </div>
</div>
