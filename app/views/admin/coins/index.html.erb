<h1><%= t Coin.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Coin.human_attribute_name(:name) %></th>
      <th><%= Coin.human_attribute_name(:code) %></th>
      <th><%= Coin.human_attribute_name(:kind) %></th>
      <th><%= Coin.human_attribute_name(:unicode) %></th>
      <th><%= Coin.human_attribute_name(:avatar) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.name %></td>
        <td><%= coin.code %></td>
        <td><%= coin.kind %></td>
        <td><%= coin.unicode %></td>
        <% if coin.avatar.attached? %>
          <td ><%= image_tag coin.avatar.variant(resize_to_limit: [30, 30]) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= status_mark coin.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: coin %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_coin_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
