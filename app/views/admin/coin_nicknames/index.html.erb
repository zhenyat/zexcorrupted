<h1><%= t CoinNickname.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= CoinNickname.human_attribute_name(:coin) %></th>
      <th><%= CoinNickname.human_attribute_name(:coin_avatar) %></th>
      <th><%= "Nickname" %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @coin_nicknames.each do |coin_nickname| %>
      <tr>
        <td><%= coin_nickname.coin.code %></td>
        <td><%= image_tag coin_nickname.coin.avatar.variant(resize_to_limit: [30, 30]) if coin_nickname.coin.avatar.present? %></td>
        <td><strong><%= coin_nickname.name %></strong></td>
        <td><%= status_mark coin_nickname.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: coin_nickname %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_coin_nickname_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
