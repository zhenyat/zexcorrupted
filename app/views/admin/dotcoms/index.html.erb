<h1><%= t Dotcom.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Dotcom.human_attribute_name(:name) %></th>
      <th><%= Dotcom.human_attribute_name(:avatar) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @dotcoms.each do |dotcom| %>
      <tr>
        <td><%= dotcom.name %></td>
        <% if dotcom.avatar.attached? %>
          <td ><%= image_tag dotcom.avatar.variant(resize_to_limit: [60, 60]) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= status_mark dotcom.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: dotcom %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_dotcom_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
