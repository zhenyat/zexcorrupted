<div class='container'>
  <table class='table table-striped'>
    <tbody>
      <% @pair.attributes.each do |key, value| %>
        <tr>
          <% unless key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at' %>
            <% if key == 'base_id' %>
              <td><%= t "activerecord.attributes.pair.#{key}" %></td>
              <td><%= @pair.base.name %></td>
            <% elsif key == 'quote_id' %>
              <td><%= t "activerecord.attributes.pair.#{key}" %></td>
              <td><%= @pair.quote.name %></td>
            <% elsif key == 'status' %>
              <td><%= t 'status.status' %></td>
              <td><%= status_mark @pair.status %></td>
            <% else %>
              <td><%= t "activerecord.attributes.pair.#{key}" %></td>
              <td><%= value %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
