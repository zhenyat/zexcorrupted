<div class="container">
  <div class="row">
    <div class="col-ms-6">
      <%=  simple_form_for([:admin, @api], html: {multipart: true}) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.association :dotcom, collection: Dotcom.active.map{|dotcom| [dotcom.name, dotcom.id]}, include_blank: false %>
          <%= f.input :mode, include_blank: false %>
          <%= f.input :base_url %>
          <%= f.input :path %>
          <%= f.input :key %>
          <%= f.input :secret %>
          <%= f.input :user %>
          <%= f.input :status, default: 0 %>
          <%#= render 'admin/shared/status_buttons', f: f %>

          <%= render 'admin/shared/form_actions', f: f, object: @api %>
        </div>
      <% end %>
    </div>
  </div>
</div>
