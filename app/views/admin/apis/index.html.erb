<h1><%= t Api.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Api.human_attribute_name(:dotcom) %></th>
      <th><%= Api.human_attribute_name(:mode) %></th>
      <th><%= Api.human_attribute_name(:base_url) %></th>
      <th><%= Api.human_attribute_name(:path) %></th>
      <th><%= Api.human_attribute_name(:key) %></th>
      <th><%= Api.human_attribute_name(:secret) %></th>
      <th><%= Api.human_attribute_name(:user) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @apis.each do |api| %>
      <tr>
        <td><%= api.dotcom.name %></td>
        <td><%= api.mode %></td>
        <td><%= api.base_url %></td>
        <td><%= api.path %></td>
        <td><%= key_tail(api.key) if not api.key.blank? %></td>
        <td><%= key_tail(api.show_secret) if not api.show_secret.blank?%></td>
        <td><%= api.user %></td>
        <td><%= status_mark api.status %></td>
        <td><%= render 'admin/shared/index_buttons_ddl', resource: api %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_api_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
